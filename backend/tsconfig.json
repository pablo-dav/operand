{
   "compilerOptions": {
     "sourceMap": true,
     "strict": true,
     "removeComments": true,
     "target": "ESNext",
     "module": "commonjs",
     "outDir": "./dist",
     "rootDir": "./",
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "typeRoots": [
       "./node_modules/@types"
     ],
     "types": [
         "node",
     ],
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true
   },
   "compileOnSave": true,
   "buildOnSave": true,
   "include": [
     "src/**/*.ts",
     "src/*.ts",
     "*.ts"
   ],
   "exclude": [
       "node_modules"
   ],
 }